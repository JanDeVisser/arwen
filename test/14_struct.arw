struct X {
    foo: i32,
    bar: i32,
}

func by_value(x: X) i32 {
    putint(x.foo);
    putln(" by value")
    return 0::i32
}

func by_reference(x: &X) i32 {
    putint(x.foo);
    putln(" by reference")
    x.foo = 42::i32
    return 0::i32
}

public func main() i32 {
    x: X
    x.foo = 12::i32
    by_reference(x)
    by_value(x)
    return 0::i32
}

